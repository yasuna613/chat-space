.message__box
  .message__top
    %p.message__top__user
      = message.user.name
    %p.message__top__created-at
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__bottom
    -if message.text.present?
      %p.message__bottom__text  
        = message.text
    = image_tag message.image.url, class: 'message__bottom__image' if message.image.present?